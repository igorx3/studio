rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all access
    // allow read, write: if false;

    // This is a permissive rule for development.
    // For production, you should implement more granular security rules
    // based on user roles and data ownership.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // Make log collections immutable (can only be created, not updated or deleted)
    match /inventoryMovements/{movementId} {
      allow read, create: if request.auth != null;
      allow update, delete: if false;
    }
    match /orderStatusHistory/{historyId} {
      allow read, create: if request.auth != null;
      allow update, delete: if false;
    }
    match /orderLocationHistory/{historyId} {
      allow read, create: if request.auth != null;
      allow update, delete: if false;
    }
    match /orderComments/{commentId} {
      allow read, create: if request.auth != null;
      allow update, delete: if false;
    }
     match /orderNovelties/{noveltyId} {
      allow read, create: if request.auth != null;
      // Allow updates for resolution
      allow update: if request.auth != null;
      allow delete: if false;
    }

    // Users can read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
    
    // More specific rules for production would go here.
    // For example:
    // function isOwner(resourceId, field) {
    //   return get(/databases/$(database)/documents/your_collection/$(resourceId)).data[field] == request.auth.uid;
    // }
    //
    // match /orders/{orderId} {
    //   allow read: if isOwner(orderId, 'storeId');
    // }
  }
}
